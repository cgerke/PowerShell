{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "pwsh.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-Command"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Install",
            "type": "shell",
            "command": "${cwd}\install.ps1",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Verbose",
            "type": "shell",
            "command": "${cwd}\install.ps1 -Verbose",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}